<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afc.biblereading"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:name="com.afc.biblereading.ApplicationSingleton"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.afc.biblereading.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.afc.biblereading.CalenderActivity"
            android:label="@string/title_activity_calender" >
        </activity>
        <activity
            android:name=".DailyMission"
            android:label="@string/title_activity_dailymission" >
        </activity>
        <activity
            android:name="com.afc.biblereading.Tabs"
            android:label="@string/title_activity_tabs" >
        </activity>
        <activity
            android:name="com.afc.biblereading.First"
            android:label="@string/title_acitvity_first" >
        </activity>
        <activity
            android:name="com.afc.biblereading.Second"
            android:label="@string/title_acitvity_second" >
        </activity>
        <receiver android:name="com.afc.biblereading.TimeAlarm" />

    </application>
    
	<uses-permission android:name="android.permission.INTERNET" /> 

</manifest>
